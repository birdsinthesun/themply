{
    "name": "birdsinthesun/themply",
    "description": "Generiert Bootwatch Stylesheets",
    "keywords": [
        "contao",
        "bootstrap",
        "theme",
        "bootwatch"
    ],
    "type": "contao-module",
    "license": "MIT",
    "version":"1.1.5",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Monique Hahnefeld",
            "email": "hello@bits-design.de",
            "homepage": "https://bits-desdign.de",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/birdsinthesun/themply",
    "repositories": {
        "birdsinthesun/themply": {
            "type": "path",
            "url": "/vendor/birdsinthesun/themply"
        }
    },
    "require": {
        "php": ">=8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/apache-pack": "^1.0",
        "symfony/asset": "6.4.*",
        "symfony/asset-mapper": "6.4.*",
        "symfony/dotenv": "6.4.*",
        "symfony/framework-bundle": "6.4.*",
        "symfony/config": "6.4.*",
        "symfony/console": "6.4.*",
        "symfony/runtime": "6.4.*",
        "symfony/twig-bundle": "6.4.*",
        "symfony/yaml": "6.4.*",
        "symfony/filesystem": "*",
        "symfony/form": "*",
        "symfonycasts/sass-bundle": "^0.8.2",
        "thomaspark/bootswatch": "^5.3",
        "twbs/bootstrap": "^5.3",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0",
        "contao/core-bundle": "^5.4"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Bits\\Themply\\": "src/"
        },
        "classmap": [
            "contao/"
        ],
        "exclude-from-classmap": [
            "contao/config/",
            "contao/dca/",
            "contao/languages/",
            "contao/templates/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "importmap:install": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
         
     "contao-manager-plugin": "Bits\\Themply\\ContaoManager\\Plugin",
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    }
}
